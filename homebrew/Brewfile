# Homebrew Bundle for Dotfiles
# Install with: brew bundle --file ~/Brewfile

# Taps
tap "caarlos0/tap"
tap "nikitabobko/tap"

# Core tools
brew "git"
brew "stow"

# Shell & Prompt
brew "bash"
brew "zsh"
brew "fish"
brew "starship"
brew "zoxide"

# File Management
brew "eza"
brew "bat"
brew "fzf"
brew "yazi"
brew "trash"

# Development
brew "vim"
brew "neovim"
brew "tmux"
brew "lazygit"

# System Monitoring
